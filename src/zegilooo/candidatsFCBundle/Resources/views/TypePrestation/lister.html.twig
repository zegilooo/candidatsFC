{% extends "zegilooocandidatsFCBundle::layout.html.twig" %}
{% block title %}Liste des types de prestation{% endblock %}
{% block body %}
         <h1>Liste des types de prestation</h1>
         <div id="liste">
	        <table>
			  <tr>
			    <th>Nom</th>
			    <th></th>
			    <th></th>
			  </tr>
            {% for t in TypePrestation %}
			  <tr>
			    <td>{{ t.nom }}</td>	
			    <td><a href="{{path('zegilooocandidats_fc_modifie_typepresta',{'id':t.id})}}">Modifier</a></td>	
			    <td><a href="{{path('zegilooocandidats_fc_supprime_typepresta',{'id':t.id})}}" class="red suppr">Supprimer</a></td>
			  </tr>            
			{% endfor %}
			</table>
		</div>
		<a href="{{path('zegilooocandidats_fc_ajout_typepresta')}}" class="btn btn-info btn-ajout" role="button">ajouter un type de prestation</a>
{% endblock %}